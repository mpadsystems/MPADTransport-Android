<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.MPADPayRegistrationActivity"
    android:fitsSystemWindows="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/convergence"
                    android:text="Registration"
                    android:textAlignment="center"
                    android:textColor="#4CAF50"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/lblFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/convergence"
                    android:labelFor="@id/txtFullName"
                    android:text="Full Name"
                    android:textSize="18sp" />

                <!-- Full Name-->
                <EditText
                    android:id="@+id/txtFullName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/app_input_style"
                    android:ems="10"
                    android:fontFamily="@font/convergence"
                    android:inputType="text|textPersonName"
                    android:textSize="18sp" />


                <!-- Gender and Birthdate-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/convergence"
                            android:labelFor="@id/spnnGender"
                            android:text="Gender"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/spnnGender"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/app_input_style"
                            android:ems="10"
                            android:fontFamily="@font/convergence"
                            android:inputType="text"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblBirthdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/convergence"
                            android:labelFor="@id/txtBirthdate"
                            android:text="Birth Date"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/txtBirthdate"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/app_input_style"
                            android:clickable="true"
                            android:ems="10"
                            android:focusable="false"
                            android:fontFamily="@font/convergence"
                            android:inputType="none"
                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>


                <!--- Roles -->
                <!--TextView
                    android:id="@+id/lblRoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/convergence"
                    android:labelFor="@id/spnnRoles"
                    android:text="Role"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spnnRoles"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/app_input_style"
                    android:ems="10"
                    android:fontFamily="@font/convergence"
                    android:inputType="text"
                    android:textSize="18sp" /-->

                <!-- Address -->
                <TextView
                    android:id="@+id/lblAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/convergence"
                    android:labelFor="@id/txtOfficeAddress"
                    android:text="Address"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/app_input_style"
                    android:ems="10"
                    android:fontFamily="@font/convergence"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textSize="18sp"
                    android:visibility="gone" />


                <!-- Phone Number-->
                <TextView
                    android:id="@+id/lblPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/convergence"
                    android:labelFor="@id/txtPhoneNumber"
                    android:text="Contact Number"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txtPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/app_input_style"
                    android:ems="10"
                    android:fontFamily="@font/convergence"
                    android:inputType="phone|textPhonetic"
                    android:textSize="18sp" />

                <!-- Phone Number-->
                <TextView
                    android:id="@+id/lblEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/convergence"
                    android:labelFor="@id/txtInitialDeposit"
                    android:text="Initial Deposit"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txtInitialDeposit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/app_input_style"
                    android:ems="10"
                    android:fontFamily="@font/convergence"
                    android:inputType="number|numberDecimal"
                    android:textSize="18sp" />


                <Button
                    android:id="@+id/btnSaveForm"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:backgroundTint="#4CAF50"
                    android:fontFamily="@font/convergence"
                    android:text="Save"
                    android:textSize="18sp" />


            </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>